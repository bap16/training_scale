{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Kata list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Suly</th>
                <th>Bicepszbal</th>
                <th>Bicepszjobb</th>
                <th>Dagadthattyubal</th>
                <th>Dagadthattyujobb</th>
                <th>Mell</th>
                <th>Derek</th>
                <th>Csipo</th>
                <th>Combbal</th>
                <th>Combjobb</th>
                <th>Vadlibal</th>
                <th>Vadlijobb</th>
                <th>Datum</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
