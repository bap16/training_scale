                <td><a href="{{ path('kata_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.suly }}</td>
                <td>{{ entity.bicepszBal }}</td>
                <td>{{ entity.bicepszJobb }}</td>
                <td>{{ entity.dagadtHattyuBal }}</td>
                <td>{{ entity.dagadtHattyuJobb }}</td>
                <td>{{ entity.mell }}</td>
                <td>{{ entity.derek }}</td>
                <td>{{ entity.csipo }}</td>
                <td>{{ entity.combBal }}</td>
                <td>{{ entity.combJobb }}</td>
                <td>{{ entity.vadliBal }}</td>
                <td>{{ entity.vadliJobb }}</td>
                <td>{% if entity.datum %}{{ entity.datum|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('kata_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('kata_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('kata_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
